var notification = $("#<%= dom_id @notification %>")
var highLight = notification.find('.bold');

// Toggle background color
notification.toggleClass('unread');

// Update counter
$('.notice.counter').html("<%= current_user.unread_counter %>");

// Highlight on clicking
$(highLight).toggleClass('teal-text');

// Revert color
setTimeout(function(){
  $(highLight).toggleClass('teal-text')
}, 200); 


                    
